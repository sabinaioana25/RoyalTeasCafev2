<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_text">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/titletext_textsize</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:paddingBottom">@dimen/titletext_paddingbottom</item>
        <item name="android:paddingTop">@dimen/titletext_paddingtop</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="image_main">
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="button_menu">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="description_text">
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">sans-serif"</item>
        <item name="android:paddingTop">@dimen/description_textpaddingtop</item>
        <item name="android:paddingBottom">@dimen/description_textpaddingbottom</item>
        <item name="android:layout_marginBottom">@dimen/description_layoutmarginbottom</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="description_line_text">
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>

        <item name="android:gravity">center_vertical</item>

    </style>

    <style name="linearlayout_root">
        <item name="android:gravity">center_horizontal|start</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>
