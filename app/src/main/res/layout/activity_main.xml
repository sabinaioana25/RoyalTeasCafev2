<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_text"
            style="@style/title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name" />

        <ImageView
            android:id="@+id/english_breakfast_image"
            style="@style/image_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/image_place"
            android:src="@drawable/banner_english_breakfast" />

        <TextView
            android:id="@+id/location_description"
            style="@style/description_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/address"
            style="@style/description_line_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin_left"
            android:layout_marginLeft="@dimen/text_margin_left"
            android:layout_marginTop="@dimen/text_margin_top"
            android:drawableStart="@drawable/ic_place_24px"
            android:drawableLeft="@drawable/ic_place_24px"
            android:drawablePadding="@dimen/text_margin_left"
            android:text="@string/description_address" />

        <TextView
            android:id="@+id/phone"
            style="@style/description_line_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin_left"
            android:layout_marginLeft="@dimen/text_margin_left"
            android:layout_marginTop="@dimen/text_margin_top"
            android:drawableStart="@drawable/ic_phone_in_talk_24px"
            android:drawableLeft="@drawable/ic_phone_in_talk_24px"
            android:drawablePadding="@dimen/text_margin_left"
            android:text="@string/description_telephone" />

        <TextView
            android:id="@+id/website"
            style="@style/description_line_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin_left"
            android:layout_marginLeft="@dimen/text_margin_left"
            android:layout_marginTop="@dimen/text_margin_top"
            android:drawableStart="@drawable/ic_laptop_mac_24px"
            android:drawableLeft="@drawable/ic_laptop_mac_24px"
            android:drawablePadding="@dimen/text_margin_left"
            android:text="@string/description_website" />

        <TextView
            android:id="@+id/hours"
            style="@style/description_line_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/text_margin_left"
            android:layout_marginLeft="@dimen/text_margin_left"
            android:layout_marginTop="@dimen/text_margin_top"
            android:drawableStart="@drawable/ic_access_time_24px"
            android:drawableLeft="@drawable/ic_access_time_24px"
            android:drawablePadding="@dimen/text_margin_left"
            android:text="@string/description_hours" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        style="@style/button_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_checkmenu" />
</LinearLayout>